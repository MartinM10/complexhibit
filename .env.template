# ===========================================
# COMPLEXHIBIT - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# 
# This file is used by:
# - docker-compose.yml (for containerized deployment)
# - backend app (for local development - copy to backend/.env)
#
# For production, ensure all secrets are changed!

# -----------------------------
# Ontology & Knowledge Graph
# -----------------------------
URI_ONTOLOGIA=https://w3id.org/OntoExhibit#
DEFAULT_GRAPH_URL=https://w3id.org/OntoExhibit/Data

# -----------------------------
# Virtuoso Configuration
# -----------------------------
# Virtuoso database admin password
VIRTUOSO_DBA_PASSWORD=dba

# SPARQL endpoint URL
# - For local development: http://localhost:8890/sparql
# - Docker Compose automatically overrides to: http://virtuoso:8890/sparql
VIRTUOSO_URL=http://localhost:8890/sparql

# -----------------------------
# PostgreSQL (Auth Database)
# -----------------------------
POSTGRES_USER=complexhibit
POSTGRES_PASSWORD=complexhibit
POSTGRES_DB=complexhibit_auth

# Database URL for backend
# - For local development: postgresql://complexhibit:complexhibit@localhost:5432/complexhibit_auth
# - Docker Compose automatically constructs from POSTGRES_* variables above
DATABASE_URL=postgresql://complexhibit:complexhibit@localhost:5432/complexhibit_auth

# -----------------------------
# JWT Authentication
# -----------------------------
# IMPORTANT: Generate a secure random secret for production!
# Run this command to generate one:
#   python -c "import secrets; print(secrets.token_urlsafe(48))"
#
# For development, you can use the default below
JWT_SECRET=change_this_in_production_use_a_long_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# -----------------------------
# SMTP Email Configuration
# -----------------------------
# Email server settings for sending emails (password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@complexhibit.org

# -----------------------------
# Admin Settings
# -----------------------------
# Admin email address for notifications
ADMIN_EMAIL=martinjs@uma.es
ADMIN_PASSWORD=change_this_password_in_production

# -----------------------------
# Frontend URLs
# -----------------------------
# Client-side API URL (accessible from browser)
# Client-side API URL (accessible from browser)
NEXT_PUBLIC_API_URL=https://complexhibit.uma.es/api/v1

# Server-side API URL (used by Next.js server)
# - For Docker: http://backend:8000/api/v1
# - For local dev: http://localhost:8000/api/v1
API_URL=http://backend:8000/api/v1

# Frontend URL (used in email links and redirects)
FRONTEND_URL=https://complexhibit.uma.es

# -----------------------------
# Production Notes
# -----------------------------
# For production deployment, make sure to:
# 1. Change JWT_SECRET to a strong random value
# 2. Use strong passwords for VIRTUOSO_DBA_PASSWORD and POSTGRES_PASSWORD
# 3. Configure proper SMTP credentials
# 4. Update FRONTEND_URL to your production domain
# 5. Set proper CORS origins in the backend
# 6. Use HTTPS URLs for NEXT_PUBLIC_API_URL

